<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Test.Neon.Models.Definitions\Test.Neon.Models.Definitions.csproj" />
  </ItemGroup>

  <Target Name="ModelGen" AfterTargets="BeforeCompile">
    <Exec Command="neon version --minimum=0.3.1-alpha" />
    <Exec Command="neon generate models --target-namespace=Test.Models &quot;$(SolutionDir)Test\Test.Neon.Models.Definitions\$(OutDir)Test.Neon.Models.Definitions.dll&quot; &quot;$(ProjectDir)GeneratedModels.cs&quot;" />
  </Target>

</Project>
