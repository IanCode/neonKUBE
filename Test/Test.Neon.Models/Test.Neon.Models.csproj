<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CouchbaseNetClient" Version="2.7.5" />
    <PackageReference Include="Linq2Couchbase" Version="1.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Lib\Neon.Couchbase\Neon.Couchbase.csproj" />
    <ProjectReference Include="..\Test.Neon.Models.Definitions\Test.Neon.Models.Definitions.csproj" />
  </ItemGroup>

  <Target Name="ModelGen" AfterTargets="BeforeCompile">
    <Exec Command="%NF_ROOT%\Tools\neon-cli\bin\$(Configuration)\netcoreapp3.0\neon version --minimum=0.3.4-alpha" />
    <Exec Command="%NF_ROOT%\Tools\neon-cli\bin\$(Configuration)\netcoreapp3.0\neon generate models --target-namespace=Test.Neon.Models --entities &quot;$(SolutionDir)Test\Test.Neon.Models.Definitions\$(OutDir)Test.Neon.Models.Definitions.dll&quot; &quot;$(ProjectDir)GeneratedEntities.cs&quot;" />
  </Target>

</Project>
