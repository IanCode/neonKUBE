  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netcoreapp2.0\neon-proxy-manager.xml</DocumentationFile>
  </PropertyGroup>

  <Import Project="..\..\Lib\Neon.Global\Neon.Global.projitems" Label="Shared" />

  <ItemGroup>
    <PackageReference Include="Consul" Version="0.7.2.3" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Lib\Neon.Cluster\Neon.Cluster.csproj" />
    <ProjectReference Include="..\..\Lib\Neon.Common\Neon.Common.csproj" />
  </ItemGroup>

</Project>