# .NET Core based image that implements the [neon-couchbase-manager].

FROM        neoncluster/dotnet:1.1.2-runtime
MAINTAINER  jeff@lilltek.com
STOPSIGNAL  SIGTERM

COPY docker-entrypoint.sh /
COPY bin                  /usr/bin/neon-couchbase-manager.dotnet

RUN chmod 700 /docker-entrypoint.sh \
    && echo "#!/bin/sh" > /usr/bin/neon-couchbase-manager \ 
    && echo "dotnet /usr/bin/neon-couchbase-manager.dotnet/neon-couchbase-manager.dll \"\$@\"" >> /usr/bin/neon-couchbase-manager \
    && chmod 770 /usr/bin/neon-couchbase-manager \
    && chmod 660 /usr/bin/neon-couchbase-manager.dotnet/*

#ENTRYPOINT ["bash"]
#ENTRYPOINT ["sleep", "100000"]
ENTRYPOINT ["/tini", "-g", "--", "/docker-entrypoint.sh"]
